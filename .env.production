# AIVO Platform - Production Environment Configuration
# ⚠️ NEVER commit this file to version control!
# Copy from .env.example and fill with production values

# ============================================
# API Configuration
# ============================================
VITE_API_BASE_URL=https://api.aivolearning.com
VITE_WS_URL=wss://api.aivolearning.com

# ============================================
# Frontend Application URLs
# ============================================
VITE_WEB_URL=https://aivolearning.com
VITE_PARENT_PORTAL_URL=https://parent.aivolearning.com
VITE_TEACHER_PORTAL_URL=https://teacher.aivolearning.com
VITE_LEARNER_APP_URL=https://learn.aivolearning.com
VITE_BASELINE_ASSESSMENT_URL=https://assess.aivolearning.com

# ============================================
# Authentication Configuration
# ============================================
# Generate with: openssl rand -base64 64
VITE_JWT_SECRET=CHANGE_THIS_IN_PRODUCTION
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_MFA=true

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_FOCUS_MONITOR=true
VITE_ENABLE_SPEECH_THERAPY=true
VITE_ENABLE_SEL=true
VITE_ENABLE_HOMEWORK_HELPER=true
VITE_ENABLE_IEP_ASSISTANT=true
VITE_ENABLE_MODEL_CLONING=true

# ============================================
# AI Configuration (Production - Cloud APIs)
# ============================================
VITE_USE_LOCAL_AI=false
# AI provider keys managed server-side

# ============================================
# Analytics (Production)
# ============================================
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
VITE_ENABLE_ANALYTICS=true

# ============================================
# Security
# ============================================
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_MOCK_DATA=false
