# AIVO Platform - Development Environment Configuration

# ============================================
# API Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:8001
VITE_WS_URL=ws://localhost:8001

# ============================================
# Frontend Application URLs
# ============================================
VITE_WEB_URL=http://localhost:5173
VITE_PARENT_PORTAL_URL=http://localhost:5174
VITE_TEACHER_PORTAL_URL=http://localhost:5175
VITE_LEARNER_APP_URL=http://localhost:5176
VITE_BASELINE_ASSESSMENT_URL=http://localhost:5179

# ============================================
# Authentication Configuration
# ============================================
VITE_JWT_SECRET=dev-jwt-secret-key-change-in-production-minimum-32-characters
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_MFA=true

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_FOCUS_MONITOR=true
VITE_ENABLE_SPEECH_THERAPY=true
VITE_ENABLE_SEL=true
VITE_ENABLE_HOMEWORK_HELPER=true
VITE_ENABLE_IEP_ASSISTANT=true
VITE_ENABLE_MODEL_CLONING=true

# ============================================
# AI Configuration (Development - Local Models)
# ============================================
VITE_USE_LOCAL_AI=true
VITE_OLLAMA_URL=http://localhost:11434
VITE_LOCALAI_URL=http://localhost:8080

# ============================================
# Analytics (Development - Disabled)
# ============================================
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=
VITE_ENABLE_ANALYTICS=false

# ============================================
# Development Tools
# ============================================
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_MOCK_DATA=false
