# =============================================================================
# AIVO Platform - Local AI Configuration (For Testing)
# =============================================================================
# Use this configuration to test the platform with local AI models
# No API keys required! Perfect for development and testing.

# AI Provider Configuration
AI_PROVIDER=local  # Options: local, openai, anthropic, google, mixed
USE_LOCAL_MODELS=true

# Local Model Endpoints
OLLAMA_BASE_URL=http://localhost:11434
LOCALAI_BASE_URL=http://localhost:8080
VLLM_BASE_URL=http://localhost:8081

# Default Models (these will be pulled automatically by Ollama)
LOCAL_CHAT_MODEL=llama3.2:3b          # Fast, good quality
LOCAL_EMBEDDING_MODEL=nomic-embed-text # For embeddings
LOCAL_CODE_MODEL=codellama:7b          # For code generation
LOCAL_VISION_MODEL=llava:7b            # For image understanding

# Alternative Models (uncomment to use)
# LOCAL_CHAT_MODEL=mistral:7b          # Alternative chat model
# LOCAL_CHAT_MODEL=gemma2:9b           # Google's Gemma
# LOCAL_CHAT_MODEL=qwen2.5:7b          # Alibaba's Qwen

# AIVO Brain Service (uses local models)
AIVO_BRAIN_URL=http://localhost:8001
AIVO_BRAIN_MODEL=ollama/llama3.2:3b

# Model Cloning Service
MODEL_CLONING_URL=http://localhost:8014
ENABLE_MODEL_CLONING=true

# Translation Service (can use local or cloud)
TRANSLATOR_BACKEND=local  # Options: local, google, deepl
TRANSLATOR_MODEL=ollama/aya:8b  # Multilingual model

# Database
DATABASE_URL=postgresql://aivo:password@localhost:5432/aivo
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0

# MinIO (local S3)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
S3_BUCKET=aivo-student-models

# Service URLs
TRAINING_ALIGNMENT_URL=http://localhost:8009
TRANSLATOR_URL=http://localhost:8010
BUSINESS_MODEL_URL=http://localhost:8011
NOTIFICATION_URL=http://localhost:8012
ANALYTICS_URL=http://localhost:8013

# Development Settings
NODE_ENV=development
LOG_LEVEL=INFO
ENABLE_DEBUG=true

# Feature Flags for Local Testing
ENABLE_GPU_ACCELERATION=true
USE_4BIT_QUANTIZATION=true  # Saves memory
ENABLE_CACHING=true
CACHE_TTL=3600

# Performance Tuning
MAX_CONCURRENT_REQUESTS=10
MODEL_TIMEOUT=120
INFERENCE_BATCH_SIZE=4

# Optional: Cloud API Keys (only if you want to mix local + cloud)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=
# SENDGRID_API_KEY=
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# STRIPE_API_KEY=
