# IEP Assistant Service Configuration

# Service
SERVICE_NAME=iep-assistant-svc
SERVICE_VERSION=1.0.0
PORT=8008
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://aivo:password@postgres:5432/aivo_iep
REDIS_URL=redis://redis:6379/6

# OpenAI for goal generation
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4

# Anthropic (optional fallback)
ANTHROPIC_API_KEY=ant-your-anthropic-key

# SMART Goal Generation
ENABLE_SMART_VALIDATION=true
MIN_CONFIDENCE_SCORE=0.7
MAX_GOALS_PER_AREA=3

# Progress Tracking
DATA_COLLECTION_FREQUENCY=weekly
TREND_ANALYSIS_MIN_POINTS=3
ALERT_THRESHOLD_REGRESSION=-0.15
ALERT_THRESHOLD_AT_RISK=0.4

# IEP Compliance
ENABLE_FERPA_COMPLIANCE=true
ENABLE_IDEA_VALIDATION=true
REQUIRE_SIGNATURES=true

# Goal Templates
ACADEMIC_GOAL_TEMPLATES_PATH=/app/templates/academic
BEHAVIORAL_GOAL_TEMPLATES_PATH=/app/templates/behavioral
CUSTOM_TEMPLATES_ENABLED=true

# Document Generation
PDF_GENERATION_ENABLED=true
DOCUMENT_STORAGE_PATH=/app/documents
ENABLE_ELECTRONIC_SIGNATURES=true

# Analytics
ENABLE_PROGRESS_PREDICTIONS=true
CONFIDENCE_INTERVAL=0.95
MIN_DATA_POINTS_FOR_PREDICTION=5

# Time Savings Tracking
TRACK_TIME_SAVINGS=true
ESTIMATED_MANUAL_TIME_MINUTES=120

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# Rate Limiting
MAX_GOAL_GENERATIONS_PER_HOUR=20
MAX_DATA_POINTS_PER_DAY=100
