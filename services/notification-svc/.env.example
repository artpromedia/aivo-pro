# Notification Service Configuration

# SendGrid (Email)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=notifications@aivo.com
SENDGRID_FROM_NAME=AIVO Learning Platform

# Twilio (SMS)
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json
FIREBASE_PROJECT_ID=aivo-learning-platform

# Redis
REDIS_URL=redis://localhost:6379/2

# Service Configuration
SERVICE_NAME=notification-svc
SERVICE_PORT=8012
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_EMAIL=100
RATE_LIMIT_SMS=50
RATE_LIMIT_PUSH=500
