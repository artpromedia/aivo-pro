# Learning Session Service Environment Configuration
# Copy to .env and configure for your environment

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/aivo_learning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/2
REDIS_MAX_CONNECTIONS=50

# Service Configuration
SERVICE_NAME=learning-session-svc
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# BKT Configuration
BKT_DEFAULT_P_INIT=0.3
BKT_DEFAULT_P_LEARN=0.1
BKT_DEFAULT_P_GUESS=0.2
BKT_DEFAULT_P_SLIP=0.1

# Mastery Thresholds
MASTERY_THRESHOLD=0.8
STRUGGLING_THRESHOLD=0.4
ADVANCEMENT_THRESHOLD=0.85
REVIEW_THRESHOLD=0.6

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MIN_PROBLEMS_PER_SKILL=5
MAX_PROBLEMS_PER_SKILL=20
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Content Generation
CONTENT_GENERATOR_MODEL=adaptive-v1
DIFFICULTY_ADJUSTMENT_RATE=0.1
ZPD_WINDOW=0.15

# Monitoring
PROMETHEUS_PORT=9004
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# External Services
AIVO_BRAIN_URL=http://localhost:8002
CONTENT_SERVICE_URL=http://localhost:8010
