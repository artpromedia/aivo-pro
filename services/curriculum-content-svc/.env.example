# Curriculum Content Service Configuration

# Database
DATABASE_URL=postgresql+asyncpg://aivo:password@postgres:5432/aivo_curriculum
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://redis:6379/4
REDIS_MAX_CONNECTIONS=100

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=aivo_content_

# Neo4j (for skill graph)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# AI Content Generation
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
CONTENT_GENERATION_MODEL=gpt-4
MAX_TOKENS=2000

# Service
SERVICE_NAME=curriculum-content-svc
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# Curriculum Systems Enabled
ENABLE_US_COMMON_CORE=true
ENABLE_UK_NATIONAL=true
ENABLE_IB=true
ENABLE_EUROPEAN_BACCALAUREATE=true
ENABLE_CHINESE_NATIONAL=true
ENABLE_AFRICAN_SYSTEMS=true
ENABLE_MIDDLE_EAST_SYSTEMS=true

# Subjects Enabled
SUBJECTS=math,science,english,social_studies,foreign_languages,arts,physical_education,computer_science,life_skills

# Content Cache
CONTENT_CACHE_TTL=3600
SKILL_GRAPH_CACHE_TTL=7200

# Monitoring
PROMETHEUS_PORT=9006
SENTRY_DSN=
