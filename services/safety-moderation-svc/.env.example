# Safety & Moderation Service Configuration

# Service
SERVICE_NAME=safety-moderation-svc
VERSION=1.0.0
DEBUG=false
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql+asyncpg://aivo:aivopass@localhost:5432/aivo_safety

# Redis
REDIS_URL=redis://localhost:6379/7

# External APIs (Optional)
PERSPECTIVE_API_KEY=your_perspective_api_key_here
GOOGLE_CLOUD_DLP_PROJECT=your_gcp_project_id

# Moderation Thresholds
TOXICITY_THRESHOLD=0.7
SEVERE_TOXICITY_THRESHOLD=0.5
PROFANITY_THRESHOLD=0.8
THREAT_THRESHOLD=0.6

# COPPA Configuration
COPPA_AGE_LIMIT=13
PARENTAL_CONSENT_DURATION_DAYS=365

# Data Retention (days)
CHAT_RETENTION_DAYS=30
CONTENT_RETENTION_DAYS=90
ASSESSMENT_RETENTION_DAYS=365

# Safety Monitoring
MAX_VIOLATIONS_PER_HOUR=10
MAX_THREATS_PER_DAY=5
MIN_SAFETY_SCORE=0.8

# ML Models
TOXICITY_MODEL=unitary/toxic-bert
CONTENT_CLASSIFIER_MODEL=facebook/bart-large-mnli
