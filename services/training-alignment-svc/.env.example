# Training & Alignment Service Configuration
SERVICE_NAME=training-alignment-svc
SERVICE_PORT=8009
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aivo_training
REDIS_URL=redis://localhost:6379/0

# AI Provider Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Governance Thresholds
BIAS_THRESHOLD=0.10
DRIFT_THRESHOLD=0.15
RETRAINING_INTERVAL_DAYS=30

# Model Storage
MODEL_STORAGE_PATH=/models
MODEL_REGISTRY_URL=http://model-monitor-svc:8015

# Feature Flags
ENABLE_AUTO_RETRAINING=true
ENABLE_BIAS_MITIGATION=true
ENABLE_DRIFT_DETECTION=true
