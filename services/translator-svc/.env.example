# Language Translator Service Configuration
SERVICE_NAME=translator-svc
SERVICE_PORT=8010
ENVIRONMENT=development

# Cache
REDIS_URL=redis://localhost:6379/1

# Translation APIs (Optional - Fallback to Google Translate)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here
GOOGLE_CLOUD_TTS_KEY=your_google_tts_key_here

# Model Configuration
TRANSLATION_MODEL=facebook/m2m100_418M
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Feature Flags
ENABLE_AUDIO_TRANSLATION=true
ENABLE_BATCH_TRANSLATION=true
ENABLE_DOCUMENT_TRANSLATION=true
