# AIVO Main Brain Service - Cloud AI Optimized (Lightweight)
FROM python:3.10-slim

LABEL maintainer="AIVO Platform"
LABEL description="AIVO Main Brain - Cloud AI Service (OpenAI/Anthropic/Google)"

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip3 install --upgrade pip setuptools wheel

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install cloud AI dependencies only
RUN pip3 install \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    pydantic==2.5.0 \
    pydantic-settings==2.1.0 \
    openai==1.58.1 \
    anthropic==0.72.1 \
    google-generativeai==0.8.3 \
    redis==5.0.1 \
    boto3==1.34.0 \
    prometheus-client==0.19.0 \
    python-json-logger==2.0.7 \
    sentry-sdk==1.40.0 \
    circuitbreaker==1.4.0 \
    pytest==7.4.3 \
    pytest-asyncio==0.21.1 \
    httpx==0.25.2 \
    numpy==1.24.3

# Copy application code
COPY . .

# Create directories
RUN mkdir -p /models /cache /curriculum_embeddings

# Set environment variables
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 8014

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8014/health || exit 1

# Run the application
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8014", "--workers", "1"]
