# Focus Monitor Service Configuration

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/aivo_learning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/3
REDIS_MAX_CONNECTIONS=50

# Service
SERVICE_NAME=focus-monitor-svc
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
ENVIRONMENT=development

# Attention Thresholds
IDLE_THRESHOLD_MS=30000
RAPID_CLICKING_THRESHOLD=10
TAB_SWITCH_THRESHOLD=3
SCROLL_VELOCITY_THRESHOLD=500
FOCUS_SCORE_THRESHOLD=0.4

# Game Configuration
GAME_DURATION_K2=60
GAME_DURATION_35=90
GAME_DURATION_68=120
GAME_DURATION_912=180

# Monitoring
PROMETHEUS_PORT=9005
