{
  "name": "@aivo/collaboration",
  "type": "module",
  "version": "1.0.0",
  "description": "Real-time collaboration with WebRTC and collaborative features",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint . --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.7.2",
    "yjs": "^13.6.19",
    "y-websocket": "^2.0.4",
    "y-protocols": "^1.0.6",
    "lib0": "^0.2.98",
    "lucide-react": "^0.468.0"
  },
  "devDependencies": {
    "@types/simple-peer": "^9.11.8",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
