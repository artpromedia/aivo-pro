{
  "name": "@aivo/pwa",
  "type": "module",
  "version": "1.0.0",
  "description": "Progressive Web App features for AIVO Learning Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.0.0",
    "workbox-build": "^7.0.0",
    "workbox-window": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-core": "^7.0.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.79",
    "typescript": "^5.6.2",
    "tsup": "^8.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}