# =============================================================================
# AIVO Platform - Cloud AI Configuration (For Production)
# =============================================================================

# AI Provider Configuration
AI_PROVIDER=mixed  # Options: local, openai, anthropic, google, mixed
USE_LOCAL_MODELS=false

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-pro
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key-here
GOOGLE_CLOUD_TTS_KEY=your-google-tts-key-here

# Database
DATABASE_URL=postgresql://aivo:password@localhost:5432/aivo
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0

# AWS S3 (production storage)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET=aivo-production-models
S3_REGION=us-east-1

# Stripe (payments)
STRIPE_API_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# SendGrid (email)
SENDGRID_API_KEY=your-sendgrid-api-key

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Firebase (push notifications)
FIREBASE_CONFIG=your-firebase-config-json

# Service URLs
AIVO_BRAIN_URL=http://localhost:8001
MODEL_CLONING_URL=http://localhost:8014
TRAINING_ALIGNMENT_URL=http://localhost:8009
TRANSLATOR_URL=http://localhost:8010
BUSINESS_MODEL_URL=http://localhost:8011
NOTIFICATION_URL=http://localhost:8012
ANALYTICS_URL=http://localhost:8013

# Production Settings
NODE_ENV=production
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# Performance
MAX_CONCURRENT_REQUESTS=50
MODEL_TIMEOUT=60
ENABLE_CACHING=true
CACHE_TTL=7200
